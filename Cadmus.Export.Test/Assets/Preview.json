{
  "RendererFilters": [
    {
      "Keys": "thes-filter",
      "Id": "it.vedph.renderer-filter.mongo-thesaurus"
    },
    {
      "Keys": "rep-filter",
      "Id": "it.vedph.renderer-filter.replace",
      "Options": {
        "Replacements": [
          {
            "Source": "hello",
            "Target": "HELLO"
          }
        ]
      }
    },
    {
      "Keys": "md-filter",
      "Id": "it.vedph.renderer-filter.markdown",
      "Options": {
        "MarkdownOpen": "<_md>",
        "MarkdownClose": "</_md>",
        "Format": "txt"
      }
    }
  ],
  "JsonRenderers": [
    {
      "Keys": "it.vedph.token-text",
      "Id": "it.vedph.json-renderer.null",
      "Options": {
        "FilterKeys": [
          "thes-filter",
          "rep-filter",
          "md-filter"
        ]
      }
    },
    {
      "Keys": "it.vedph.token-text-layer|fr.it.vedph.comment",
      "Id": "it.vedph.json-renderer.null"
    },
    {
      "Keys": "it.vedph.token-text-layer|fr.it.vedph.orthography",
      "Id": "it.vedph.json-renderer.null"
    }
  ],
  "TextPartFlatteners": [
    {
      "Keys": "it.vedph.token-text",
      "Id": "it.vedph.text-flattener.token"
    }
  ],
  "TextBlockRenderers": [
    {
      "Keys": "text-standoff",
      "Id": "it.vedph.text-block-renderer.standoff-tei",
      "Options": {
        "RowOpen": "<div xml:id=\"r{y}\">",
        "RowClose": "</div>",
        "BlockOpen": "<seg xml:id=\"{b}\">",
        "BlockClose": "</seg>"
      }
    }
  ],
  "ItemComposers": [
    {
      "Keys": "text-item",
      "Id": "it.vedph.item-composer.tei-standoff.fs",
      "Options": {
        "TextPartFlattener": {
          "Keys": "it.vedph.token-text",
          "Id": "it.vedph.text-flattener.token"
        },
        "TextBlockRenderer": {
          "Id": "it.vedph.text-block-renderer.tei-standoff",
          "Options": {
            "RowElement": "div",
            "BlockElement": "seg"
          }
        },
        "JsonRenderers": [
          {
            "Keys": "it.vedph.token-text-layer|fr.it.vedph.comment",
            "Id": "it.vedph.json-renderer.null"
          },
          {
            "Keys": "it.vedph.token-text-layer|fr.it.vedph.orthography",
            "Id": "it.vedph.json-renderer.null"
          }
        ]
      }
    }
  ]
}
